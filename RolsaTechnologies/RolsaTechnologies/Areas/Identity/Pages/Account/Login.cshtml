@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center text-primary">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h2 class="text-center text-success">Use a local account to log in</h2>
                <hr class="my-3" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Log in</button>
            </form>
        </section>

        <div class="mt-3">
            <p class="text-center">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none text-success">Forgot your password?</a>
            </p>
            <p class="text-center">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-success">Register as a new user</a>
            </p>
            <p class="text-center">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none text-success">Resend email confirmation</a>
            </p>
        </div>
        <div class="text-center">
            <p>Or use a social account:</p>
            <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <button type="submit" class="btn btn-outline-danger w-100" name="provider" value="Google">
                    <i class="bi bi-google"></i> Continue with Google
                </button>
            </form>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}