@model RolsaTechnologies.Models.EnergyTracker

@{
    ViewData["Title"] = "Create Energy Tracker";
}

<div class="container py-4">
    <div class="card shadow-lg p-4">
        <h2 class="fw-bold text-center mb-4">Create Energy Tracker</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <!-- Consumption Input -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Consumption" class="form-label">Energy Consumption (kWh)</label>
                        <input asp-for="Consumption" class="form-control" />
                        <span asp-validation-for="Consumption" class="text-danger"></span>
                    </div>
                </div>

                <!-- Energy Type Dropdown -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EnergyType" class="form-label">Select Energy Type</label>
                        <select asp-for="EnergyType" class="form-select" asp-items="ViewBag.EnergyTypeList">
                            <option value="">Choose type of energy</option>
                        </select>
                        <span asp-validation-for="EnergyType" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary dark-mode-btn">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create Energy Tracker
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}