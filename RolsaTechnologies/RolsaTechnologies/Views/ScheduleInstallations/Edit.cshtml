@model RolsaTechnologies.Models.ScheduleInstallation

@{
    ViewData["Title"] = "Edit Installation";
}

<div class="container py-4">
    <div class="card shadow-lg p-4">
        <h2 class="fw-bold text-center mb-4">Edit Installation</h2>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <!-- User ID (Read-only, cannot be changed) -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="UserId" class="form-label">User ID</label>
                        <input asp-for="UserId" class="form-control" readonly />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Scheduled Date -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ScheduledDate" class="form-label">Scheduled Date</label>
                        <input asp-for="ScheduledDate" type="date" class="form-control" />
                        <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                    </div>
                </div>

               <!-- Appliance Type -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ApplianceType" class="form-label">Appliance Type</label>
                        <select asp-for="ApplianceType" class="form-control">
                            <option value="" disabled selected>Select an appliance</option>
                            <option value="Solar Panels" @@(Model.ApplianceType == "Solar Panels" ? "selected" : "")>Solar Panels</option>
                            <option value="Smart Home Appliances" @@(Model.ApplianceType == "Smart Home Appliances" ? "selected" : "")>Smart Home Appliances</option>
                            <option value="Electric Vehicle Charging Station" @@(Model.ApplianceType == "Electric Vehicle Charging Station" ? "selected" : "")>Electric Vehicle Charging Station</option>
                        </select>
                        <span asp-validation-for="ApplianceType" class="text-danger"></span>
                    </div>
                </div>

                <!-- Address -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <!-- Mobile Number -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Mobile" class="form-label">Mobile Number</label>
                        <input asp-for="Mobile" class="form-control" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                </div>

                <!-- Notes -->
                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Submit and Back Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}