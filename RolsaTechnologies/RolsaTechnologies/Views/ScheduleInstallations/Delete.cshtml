@model RolsaTechnologies.Models.ScheduleInstallation

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <div class="card shadow-lg p-4">
        <h2 class="fw-bold text-center mb-4">Delete Schedule Installation</h2>

        <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>

        <form asp-action="Delete">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th class="col-sm-2">User ID</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.UserId)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">Scheduled Date</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.ScheduledDate)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">Appliance Type</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.ApplianceType)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">Address</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.Address)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">Mobile</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.Mobile)</td>
                    </tr>
                    <tr>
                        <th class="col-sm-2">Notes</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.Notes)</td>
                    </tr>
                </tbody>
            </table>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>