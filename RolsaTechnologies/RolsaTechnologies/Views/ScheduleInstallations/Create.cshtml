@model RolsaTechnologies.Models.ScheduleInstallation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ScheduleInstallation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Date Picker for Scheduled Date -->
            <div class="form-group">
                <label asp-for="ScheduledDate" class="control-label">Select Date</label>
                <input asp-for="ScheduledDate" type="date" class="form-control" />
                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
            </div>

            <!-- Time Slot Dropdown -->
            <div class="form-group">
                <label for="scheduledTime">Select Time</label>
                <select id="scheduledTime" name="scheduledTime" class="form-control">
                    <!-- Loop through each available time slot from ViewBag -->
                    @foreach (var timeSlot in ViewBag.AvailableSlots as List<TimeSpan>)

                    {
                        <!-- Create an option element for each time slot formatted as hh:mm -->
                        <option value="@timeSlot.ToString(@"hh\:mm")">@timeSlot.ToString(@"hh\:mm")</option>
                    }
                </select>
                <span asp-validation-for="ScheduledDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApplianceType" class="control-label"></label>

                <!-- Dropdown for ApplianceType -->
                <select asp-for="ApplianceType" class="form-control">
                    <option value="" disabled selected>Select a type of appliance</option> <!-- Placeholder -->
                    <option value="Solar Panels">Solar Panels</option> <!-- First choice -->
                    <option value="Smart Home Appliances">Smart Home Appliances</option> <!-- Second choice -->
                    <option value="Electric Vehicle Charging Station">Electric Vehicle Charging Station</option> <!-- Third choice -->
                </select>

                <!-- Validation message for ApplianceType -->
                <span asp-validation-for="ApplianceType" class="text-danger"></span>
            </div>
            <!-- Separate Postcode Field -->
            <div class="form-group">
                <label for="Postcode" class="control-label">Postcode</label>
                <input id="Postcode" name="Postcode" class="form-control" />
                <span class="text-danger" id="postcode-error"></span> <!-- Show validation error here -->
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input asp-for="Mobile" class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
