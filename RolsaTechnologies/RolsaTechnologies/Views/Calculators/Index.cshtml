@model IEnumerable<RolsaTechnologies.Models.Calculator>

@{
    ViewData["Title"] = "Carbon Footprint Records";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="text-primary">Carbon Footprint Records</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Add New</a>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ElectricityUsage)</th>
                    <th>@Html.DisplayNameFor(model => model.GasUsage)</th>
                    <th>@Html.DisplayNameFor(model => model.CarMilesPerWeek)</th>
                    <th>@Html.DisplayNameFor(model => model.CarFuelEfficiency)</th>
                    <th>@Html.DisplayNameFor(model => model.PublicTransportMilesPerWeek)</th>
                    <th>@Html.DisplayNameFor(model => model.WasteProducedPerWeek)</th>
                    <th>@Html.DisplayNameFor(model => model.RecyclingHabits)</th>
                    <th>@Html.DisplayNameFor(model => model.MeatConsumptionPerWeek)</th>
                    <th>@Html.DisplayNameFor(model => model.CalculatedCarbonFootprint)</th>
                    <th>@Html.DisplayNameFor(model => model.DateCalculated)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ElectricityUsage) kWh</td>
                        <td>@Html.DisplayFor(modelItem => item.GasUsage) kWh</td>
                        <td>@Html.DisplayFor(modelItem => item.CarMilesPerWeek) miles</td>
                        <td>@Html.DisplayFor(modelItem => item.CarFuelEfficiency) mpg</td>
                        <td>@Html.DisplayFor(modelItem => item.PublicTransportMilesPerWeek) miles</td>
                        <td>@Html.DisplayFor(modelItem => item.WasteProducedPerWeek) kg</td>
                        <td>
                            @if (item.RecyclingHabits)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.MeatConsumptionPerWeek) kg</td>
                        <td>
                            <span class="badge bg-info">@Html.DisplayFor(modelItem => item.CalculatedCarbonFootprint) tons</span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.DateCalculated)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit<i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details<i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete<i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}