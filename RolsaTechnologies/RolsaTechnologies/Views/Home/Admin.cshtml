@using RolsaTechnologies.Models
@model List<RolsaTechnologies.Models.UserRoleViewModel>
@{
    ViewData["Title"] = "User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Roles</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Email</td>
                <td>@(user.Roles.Any() ? string.Join(", ", user.Roles) : "No Roles Assigned")</td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="ManageUserRole"
                       asp-action="Manage"
                       asp-route-userId="@user.UserId">
                        Manage Roles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>