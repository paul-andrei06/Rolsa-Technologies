@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>

    <!-- Bootstrap for accessibility support -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>

    <div class="container" style="padding-top: 80px; position: relative; left: 20px; padding: 40px; background-color: #17195A; color: white; border-radius: 8px; width: 100%; max-width: 800px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h1 class="text-white" style="font-size: 72px;">404</h1>
        <p class="text-white" style="font-size: 28px;">Page Not Found</p>
        <div class="message-container" style="padding: 20px; border-radius: 8px; margin-top: 20px;">
            <p style="font-size: 18px; color: white; line-height: 1.6;">Sorry, the page you are looking for is either unavailable or has been moved. Here are a few reasons why this may have happened:</p>
            <ul style="font-size: 18px; color: white;">
                <li>The page is still under development and not yet available.</li>
                <li>The page has been moved or deleted.</li>
                <li>You may have mistyped the URL or followed an incorrect link.</li>
                <li>The page is temporarily unavailable due to maintenance.</li>
                <li>The page may be restricted or require login access.</li>
            </ul>
            <button class="btn btn-warning" style="background-color: #FE5716; color: white; padding: 12px 24px; font-size: 18px; border: none; border-radius: 5px; cursor: pointer;" onclick="window.location.href='/'">Back to Home</button>
        </div>
    </div>

</body>
</html>