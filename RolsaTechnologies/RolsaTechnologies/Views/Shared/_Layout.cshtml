                    </div>
                </div>
            </div>
        </footer>


        <script>
                    document.addEventListener("DOMContentLoaded", function () {
            const body = document.body;

            // Dark Mode
            function toggleDarkMode() {
                body.classList.toggle("dark-mode");
                localStorage.setItem("theme", body.classList.contains("dark-mode") ? "dark" : "light");
            }
            if (localStorage.getItem("theme") === "dark") {
                body.classList.add("dark-mode");
            }
            window.toggleDarkMode = toggleDarkMode;

            // High Contrast
            function toggleHighContrast() {
                body.classList.toggle("high-contrast");
                localStorage.setItem("contrastMode", body.classList.contains("high-contrast") ? "high-contrast" : "normal");
            }
            if (localStorage.getItem("contrastMode") === "high-contrast") {
                body.classList.add("high-contrast");
            }
            window.toggleHighContrast = toggleHighContrast;

            // Font Size
            function changeFontSize(action) {
                let currentSize = parseInt(window.getComputedStyle(body).fontSize);
                if (action === 'increase') {
                    currentSize += 2;
                } else if (action === 'decrease') {
                    currentSize -= 2;
                }
                body.style.fontSize = currentSize + "px";
                localStorage.setItem("fontSize", currentSize + "px");
            }
            window.changeFontSize = changeFontSize;
        });

        </script>

        <style>
        /* Default styles */
        body {
            background-color: white;
            color: black;
            transition: background-color 0.3s, color 0.3s;
        }

            /* Dark mode styles */
            body.dark-mode {
                background-color: #121212; /* Dark background color */
                color: white; /* White text color */
            }

                body.dark-mode h1, body.dark-mode h2, body.dark-mode h3, body.dark-mode h4, body.dark-mode h5, body.dark-mode h6,
                body.dark-mode p, body.dark-mode li, body.dark-mode a {
                    color: white; /* Ensures text and links are white in dark mode */
                }

                body.dark-mode a {
                    text-decoration: none;
                }

                    body.dark-mode a:hover {
                        color: #FFD700; /* Optional: Highlight color on hover */
                    }

            /* High contrast mode styles */
            body.high-contrast {
                background-color: black !important; /* Black background */
                color: yellow !important; /* Yellow text color */
            }

                /* High contrast mode for text and links */
                body.high-contrast h1, body.high-contrast h2, body.high-contrast h3, body.high-contrast h4, body.high-contrast h5, body.high-contrast h6,
                body.high-contrast p, body.high-contrast li, body.high-contrast a {
                    color: yellow !important; /* Override text color to yellow */
                }
                

        /* Optional: Adjust font size */
        body {
            transition: font-size 0.3s;
        }

        /* Footer styles */
        footer {
            background-color: var(--background-color);
            color: var(--text-color);
            padding: 20px;
            text-align: center;
            transition: background-color 0.3s, color 0.3s;
        }

            footer a {
                color: var(--text-color);
                text-decoration: none;
            }

                footer a:hover {
                    color: #FFD700; /* Optional: gold color for links on hover */
                }

        /* Social media icons */
        .social-icons a {
            margin: 0 10px;
            color: var(--text-color);
            font-size: 20px;
            text-decoration: none;
        }

            .social-icons a:hover {
                color: #FFD700;
            }

        /* Default navigation styles */
        .navbar {
            background-color: #ffffff; /* White background */
            transition: background-color 0.3s;
        }

            .navbar .nav-link {
                color: #000000; /* Default text color for links */
                transition: color 0.3s;
            }

                .navbar .nav-link:hover {
                    color: #007bff; /* Highlight color on hover */
                }

            

        .navbar-nav .nav-item {
            margin-right: 15px; /* Space between nav items */
        }

        /* Dark mode navigation */
        body.dark-mode .navbar {
            background-color: #121212 !important; /* Dark background */
            
        }

            body.dark-mode .navbar .nav-link {
                color: #ffffff; /* White text color */
            }

                body.dark-mode .navbar .nav-link:hover {
                    color: #FFD700; /* Highlight color in dark mode */
                }

            body.dark-mode .navbar .navbar-toggler-icon {
                background-color: #ffffff; /* White toggler icon in dark mode */
            }

        /* High contrast mode navigation */
        body.high-contrast .navbar {
            background-color: black !important; /* Black background in high contrast */
        }

            body.high-contrast .navbar .nav-link {
                color: yellow !important; /* Yellow text color */
            }

                body.high-contrast .navbar .nav-link:hover {
                    color: yellow !important; /* Maintain yellow color on hover */
                }

            body.high-contrast .navbar .navbar-toggler-icon {
                background-color: yellow !important; /* Yellow toggler icon */
            }

        /* Dropdown menu styles */
        .navbar .dropdown-menu {
            background-color: #ffffff; /* White background for dropdown */
            border: none; /* Remove border */
        }

        body.dark-mode .navbar .dropdown-menu {
            background-color: #2c2c2c; /* Dark background for dropdown in dark mode */
        }

        body.high-contrast .navbar .dropdown-menu {
            background-color: black !important; /* Black dropdown in high contrast mode */
        }

        .navbar .dropdown-item {
            
            transition: color 0.3s;
        }

        body.dark-mode .navbar .dropdown-item {
            color: #ffffff; /* White text for dropdown in dark mode */
        }

        body.high-contrast .navbar .dropdown-item {
            color: yellow !important; /* Yellow text in high contrast mode */
        }

        .navbar .dropdown-item:hover {
            background-color: #007bff; /* Hover background color for dropdown items */
            color: #ffffff; /* White text color on hover */
        }

        body.dark-mode .navbar .dropdown-item:hover {
            background-color: #FFD700; /* Highlight with gold in dark mode */
        }

        /* Make sure the navbar collapses correctly on small screens */
        @@media (max-width: 767px) {
            .navbar-nav

        {
            text-align: center;
        }

        .navbar-nav .nav-item {
            margin-right: 0; /* Remove right margin on small screens */
            margin-bottom: 10px; /* Space between nav items on small screens */
        }

        }
        </style>

    
