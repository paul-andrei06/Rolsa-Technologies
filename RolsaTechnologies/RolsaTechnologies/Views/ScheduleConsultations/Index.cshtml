@model IEnumerable<RolsaTechnologies.Models.ScheduleConsultation>

@{
    ViewData["Title"] = "Scheduled Consultations";
    var isAdmin = User.IsInRole("Admin");
    var isProfessional = User.IsInRole("Professional");
}

<div class="container py-4">
    <div class="card shadow-lg p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="fw-bold">Scheduled Consultations</h2>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-calendar-plus"></i> Schedule New Consultation
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle accessible-table">
                <thead class="table-dark">
                    <tr>
                        @if (isAdmin)
                        {
                            <th>Email</th>
                        }
                        <th>@Html.DisplayNameFor(model => model.ScheduledDate)</th>
                        @if (isProfessional || isAdmin)
                        {
                            <th>@Html.DisplayNameFor(model => model.ContactMethod)</th>
                        }
                        @if (isProfessional || isAdmin)
                        {
                            <th>@Html.DisplayNameFor(model => model.Mobile)</th>
                        }
                        @if (isProfessional || isAdmin)
                        {
                            <th>@Html.DisplayNameFor(model => model.ContactEmail)</th>
                        }
                        @if (isProfessional || isAdmin)
                        {
                            <th>@Html.DisplayNameFor(model => model.Notes)</th>
                        }
                        @if (isAdmin)
                        {
                            <th class="text-center">Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr tabindex="0">
                            @if (isAdmin)
                            {
                                <td>@ViewBag.UserEmail</td> <!-- Display email for Admins -->
                            }

                            <td>@Html.DisplayFor(modelItem => item.ScheduledDate)</td> <!-- Always display ScheduledDate -->
                            @if (isProfessional || isAdmin)
                            {
                                <td>@Html.DisplayFor(modelItem => item.ContactMethod)</td> <!-- Display ContactMethod for Professional or Admin -->
                            }

                            @if (isProfessional || isAdmin)
                            {
                                <!-- Show Mobile or ContactEmail based on ContactMethod for Professional or Admin -->
                                @if (item.ContactMethod == "Mobile")
                                {
                                    <td>@Html.DisplayFor(modelItem => item.Mobile)</td>
                                }
                                else
                                {
                                    <td>@Html.DisplayFor(modelItem => item.ContactEmail)</td>
                                }
                            }

                            @if (isProfessional || isAdmin)
                            {
                                <td>@Html.DisplayFor(modelItem => item.Notes)</td> <!-- Display Notes for Professional or Admin -->
                            }

                            @if (isAdmin)
                            {
                                <!-- Moved the Action buttons into their own column -->
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>