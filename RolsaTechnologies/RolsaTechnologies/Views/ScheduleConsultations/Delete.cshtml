@model RolsaTechnologies.Models.ScheduleConsultation

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <div class="card shadow-lg p-4">
        <h2 class="fw-bold text-center mb-4">Delete Consultation</h2>

        <h3 class="text-center mb-4">Are you sure you want to delete this consultation?</h3>

        <div>
            <h4 class="mb-3">Schedule Consultation</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ScheduledDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ScheduledDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ContactMethod)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ContactMethod)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Mobile)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Mobile)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ContactEmail)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ContactEmail)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Notes)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Notes)
                </dd>
            </dl>

            <!-- Delete Form -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete Consultation
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>