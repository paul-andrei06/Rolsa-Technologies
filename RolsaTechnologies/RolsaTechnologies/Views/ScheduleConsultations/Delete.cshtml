@model RolsaTechnologies.Models.ScheduleConsultation

@{
    ViewData["Title"] = "Delete Consultation";
}

<div class="container py-4">
    <div class="card shadow-lg p-4">
        <h2 class="fw-bold text-center mb-4">Delete Consultation</h2>

        <form asp-action="Delete" method="post">
            <div class="row">
                <!-- Display Consultation Details -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">User ID</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.UserId)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Scheduled Date</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.ScheduledDate)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Contact Method</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.ContactMethod)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Mobile Number</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Mobile)</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label class="form-label">Contact Email</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.ContactEmail)</p>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group mb-3">
                        <label class="form-label">Additional Notes</label>
                        <p class="form-control-plaintext">@Html.DisplayFor(model => model.Notes)</p>
                    </div>
                </div>
            </div>

            <hr />

            <!-- Confirmation and Buttons -->
            <h4 class="text-center mb-3 text-danger">Are you sure you want to delete this consultation?</h4>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete Consultation
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>

            <!-- Hidden ID Field for Deletion -->
            <input type="hidden" asp-for="Id" />
        </form>
    </div>
</div>