@model RolsaTechnologies.Models.ScheduleConsultation

@{
    ViewData["Title"] = "Consultation Details";
}

<div class="container py-4">
    <div class="card shadow-lg p-4">
        <h2 class="fw-bold text-center mb-4">Consultation Details</h2>

        <form>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>User ID</th>
                        <td>@Html.DisplayFor(model => model.UserId)</td>
                    </tr>
                    <tr>
                        <th>Scheduled Date</th>
                        <td>@Html.DisplayFor(model => model.ScheduledDate)</td>
                    </tr>
                    <tr>
                        <th>Contact Method</th>
                        <td>@Html.DisplayFor(model => model.ContactMethod)</td>
                    </tr>
                    <tr>
                        <th>Mobile Number</th>
                        <td>@Html.DisplayFor(model => model.Mobile)</td>
                    </tr>
                    <tr>
                        <th>Contact Email</th>
                        <td>@Html.DisplayFor(model => model.ContactEmail)</td>
                    </tr>
                    <tr>
                        <th>Notes</th>
                        <td>@Html.DisplayFor(model => model.Notes)</td>
                    </tr>
                </tbody>
            </table>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit Consultation
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>